<h1>New Country</h1>
<form method="POST" action="/home/new_country">
  <div class="form-wrapper">

    <div>
      <label for="name">Country Name</label>
      <input type="text" name="name" id="name"/>
    </div>

    <div>
      <label for="description">Description</label>
      <input type="text" name="description" id="description"/>
    </div>

    <div>
      <label for="visited_select">visited before?:</label>
      <select name="visited" id="visited_select">
          <option id="visited" value= 'yes'>yes</option>
          <option id="visited" value= 'no'>no</option>
      </select>
    </div>

    <div>
      <input type="submit" value="Add Country"/>
    </div>
  </div>
</form>
