<h1 class="page-title">New Destination</h1>
<form method="POST" action="/home/new_destination">
  <div class="form-wrapper">

    <div>
      <label for="name">Destination Name</label>
      <input type="text" name="name" id="name"/>
    </div>

    <div>
      <label for="description">Description</label>
      <input type="text" name="description" id="description"/>
    </div>

    <select name="city_id">
      <% for city in @cities %>
      <option value="<%= city.id %>"><%= city.name %></option>
      <% end %>
      </select>

    <div>
      <label for="visited_select">visited before?:</label>
      <select name="visited" id="visited_select">
          <option id="visited" value= 'yes'>yes</option>
          <option id="visited" value= 'no'>no</option>
      </select>
    </div>

    <div>
      <input type="submit" value="Add Destination"/>
    </div>
  </div>
</form>
