
<div class="countries-head">
  <h1 class="pg-description">Visited Cities</h1>
  <a class="add-btn"href="/add_country_to_bucket_list">+</a>
</div>
<div class="countries-container">
  <% @city.each do |city| %>
  <div class="country-container">
    <h3><a class="country-title" href="/bucket_list_cities/<%= city.id %>"><%= city.name.capitalize %></a></h3>
    <p><%= city.description %></p>
    <form action="/bucket_list_countries/<%= city .id %>/delete" method="POST"><input type="submit" value="Delete"></form>
    <form action="/countries_visited/<%= city.id %>/edit_country_bl"><input type="submit" value="edit"></form>
  </div>
  <% end %>
</div>
